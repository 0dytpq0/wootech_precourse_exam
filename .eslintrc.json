{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "parser": "flow"
    }
  ],
  "rules": {
    "import/prefer-default-export": ["error", { "target": "single" }],
    "max-depth": ["error", 2],
    "import/extensions": "off",
    "max-lines-per-function": ["error", 15]
  }
}
